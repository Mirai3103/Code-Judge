<AuthorizeView>
    <Authorized >

        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost">
                @context.User.Identity.Name
            </label>
            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                <li>
                    <a href="/Identity/Account/Manage">
                        Profile
                    </a>
                </li>
                @if (@context.User.IsInRole("Administrator"))
                {
                    <li>
                        <a href="/Admin">
                            Admin
                        </a>
                    </li>
                }

                <li>
                    <form method="post" action="/Identity/Account/Logout"><button type="submit" class=" w-full text-left">Logout</button>
                        
                    </form>
                 
                </li>
            </ul>
        </div>
    </Authorized>
    <NotAuthorized >

        <a class="btn btn-primary" href="Identity/Account/Login" Target="_self">
            Login
        </a>

        <a class="btn btn-ghost btn-primary" Target="_self" href="Identity/Account/Register">
            Register
        </a>

    </NotAuthorized>
</AuthorizeView>